# Fuzzing targets for hotmeal

# Run the diff/apply roundtrip fuzzer with HTML dictionary
fuzz-mutate *ARGS:
    cargo +nightly fuzz run mutate -- -dict=html.dict {{ARGS}}

# Minimize a crash artifact
tmin-mutate ARTIFACT:
    cargo +nightly fuzz tmin mutate {{ARTIFACT}}

# Run with coverage report
fuzz-mutate-cov *ARGS:
    cargo +nightly fuzz coverage mutate -- -dict=html.dict {{ARGS}}

# List all fuzz targets
list:
    cargo +nightly fuzz list
